{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "PUBLIC/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/signin", "dest": "/PUBLIC/login.html" },
    { "src": "/publishBlog", "dest": "/PUBLIC/publishBlog.html" },
    { "src": "/blog/(.*)", "dest": "/PUBLIC/template.html" },
    { "src": "/view-all-blog", "dest": "/PUBLIC/viewall.html" },
    { "src": "/(.*)", "dest": "/PUBLIC/$1" }
  ]
}